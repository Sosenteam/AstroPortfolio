---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

interface BlogPost {
  url: string;
  frontmatter: {
    title: string;
    description: string;
  };
}

const posts = Object.values(import.meta.glob("./blogs/*.md", { eager: true })) as BlogPost[];
---

<Layout pageTitle="Blogs">
  <main>
    <h1>Blogs</h1>
    <div class="bloglist">
        {
          posts.map((post) => (
            <div class="post">
              <a href={post.url}>
                <div class="innera">
                <h3>{post.frontmatter.title}</h3>
                <p>{post.frontmatter.description}</p>
                </div>
              </a>
            </div>
          ))
        }
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 2rem 2rem 5%;
  }

  .bloglist {
    grid-template-columns: auto auto auto;
    display: grid;
  }
  
  .post {
    border: 2px solid var(--primary);
    border-radius: 5px;
    margin: 30px 30px 30px 0;
    background-color: rgba(108, 49, 67, 0.2);
    transition: all 0.3s ease;
  }

  .post:hover {
    border-color: var(--accent);
    background-color: rgba(195, 108, 136, 0.15);
    transform: translateY(-5px);
  }

  .post h3 {
    color: var(--primary);
    text-align: center;
    margin: 1rem 0 0.5rem 0;
  }

  .post p {
    color: var(--text);
    text-align: center;
    margin: 0.5rem 1rem 1rem 1rem;
  }

  .post a {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    text-decoration: none;
    display: block;
  }

  .innera {
    margin: 10px;
  }
</style>
