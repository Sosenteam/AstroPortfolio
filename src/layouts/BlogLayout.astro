---
import Header from "../components/Header.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <main>
      <h1>{pageTitle}</h1>
      <div class="md">
          <slot />
      </div>
    </main>
  </body>
</html>

<style>
    main {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem 2rem 2rem 5%;
    }

    body{
      background-image: radial-gradient(var(--accent-low) 1px, transparent 0);
      background-size: 35px 35px;
    }

    h1 {
      font-size: 3.5rem;
      color: var(--text);
      font-weight: 300;
      letter-spacing: -1px;
      margin: 2rem 0 1rem 0;
      line-height: 1.2;
    }

    .md {
      margin: 0;
      color: var(--text);
    }

    .md :global(h2) {
      font-size: 2rem;
      color: var(--primary);
      font-weight: 400;
      margin: 1.5rem 0 0.75rem 0;
    }

    .md :global(h3) {
      font-size: 1.25rem;
      color: var(--primary);
      font-weight: 400;
      margin: 1rem 0 0.5rem 0;
    }

    .md :global(p) {
      font-size: 1.1rem;
      line-height: 1.7;
      margin: 0.75rem 0;
    }

    .md :global(a) {
      color: var(--primary);
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
      border-bottom: 2px solid transparent;
    }

    .md :global(a:hover) {
      color: var(--accent);
      border-bottom-color: var(--accent);
    }

    .md :global(img) {
      max-width: 600px;
      height: auto;
      display: block;
      margin: 2rem auto 2rem auto;
      border-radius: 8px;
      border: 2px solid var(--primary);
      box-shadow: 0 2px 12px rgba(0,0,0,0.10);
    }

    .md :global(code) {
      background-color: rgba(108, 49, 67, 0.3);
      color: var(--primary);
      padding: 0.2rem 0.5rem;
      border-radius: 4px;
      font-family: 'Courier New', monospace;
      font-size: 0.9em;
    }

    .md :global(pre) {
      background-color: rgba(15, 8, 10, 0.8);
      border: 1px solid var(--secondary);
      border-radius: 8px;
      padding: 1.5rem;
      overflow-x: auto;
      margin: 1.5rem 0;
    }

    .md :global(pre code) {
      background-color: transparent;
      color: var(--primary);
      padding: 0;
      border-radius: 0;
      font-size: 0.95rem;
      line-height: 1.5;
    }
</style>
